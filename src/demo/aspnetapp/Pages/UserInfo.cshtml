@page
@model UserInfoModel
@{
  ViewData["Title"] = "User Info";
  var reqHeaders = HttpContext.Request.Headers;
}

<div class="text-center">
  <h1>@ViewData["Title"]</h1>
</div>

<div align="center">
  <table class="table table-striped table-hover">
    <tr>
      <td>Remote IP</td>
      <td>@Model.RemoteIp</td>
    </tr>
    <tr>
      <td>Request headers</td>
      <td>
        @{
          foreach (var foo in reqHeaders)
          {
            @:@foo.Key : @foo.Value <br />
          }
        }
      </td>
    </tr>
  </table>
</div>
